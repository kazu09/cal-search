<div class="newlogin">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <!--<%= render "devise/shared/error_messages", resource: resource %>-->

      <%# カラムnicknameの登録 %>
    <div class="namefield">
      <%= f.label :名前の入力（必須）,class: :namefield__namelabel %><br />
      <%= f.text_field :nickname, autofocus: true, placeholder: :入力してください,class: :namefield__name %>
    </div>

    <div class="mailfield">
      <%= f.label :メールアドレス（必須）,class: :mailfield__maillabel %><br />
      <%= f.email_field :email, autofocus: true, placeholder: :半角で入力してください, autocomplete: "email",class: :mailfield__mail %>
    </div>

    <div class="passwordfield">
      <%= f.label :パスワード,class: :passwordfield__passwordlabel %>
      <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> 文字（必須）</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: :半角で入力してください,class: :passwordfield__password %>
    </div>

    <div class="repasswordfield">
      <%= f.label :パスワード再入力（必須）,class: :repasswordfield__repasswordlabel %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :半角で入力してください ,class: :repasswordfield__repassword%>
    </div>

    <div class="loginfield">
      <%= f.submit "登録する", class: :loginfield__loginbtn %>
    </div>
 <% end %>

<!--<%= render "devise/shared/links" %>-->
</div>