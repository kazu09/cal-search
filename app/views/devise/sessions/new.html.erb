<div class="formlogin">
  <h2>ログイン</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mailfield">
    <%= f.label :メールアドレスを入力してください（必須） ,class: :mailfield__maillabel %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :半角で入力してください,class: :mailfield__mail %>
  </div>

  <div class="passwordfield">
    <%= f.label :パスワード６文字（必須）,class: :passwordfield__passwordlabel %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: :半角で入力してください,class: :passwordfield__password %>
  </div>

  <!--<% if devise_mapping.rememberable? %> 
    <div class="field"> %>
      <%= f.check_box :remember_me %> 
      <%= f.label :remember_me %> 
    </div>  %>
  <% end %>  -->

 <div class="loginfield">
    <%= f.submit "ログイン" , class: :loginfield__loginbtn%>
  </div>
  <% end %>

  <!-- <%= render "devise/shared/links" %>-->
  
</div>