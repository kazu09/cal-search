<div class="contents">
<div class="postTitle">
  <%= @tweet.title %>
</div>
<div class="post">

<div class="postImage">
  <%= image_tag @tweet.image.to_s, class: "postImage__image" %>
</div>
<div class="postText">
  <%= simple_format @tweet.text %>
</div>
</div>


<div class="postDate">
  <%= @tweet.data %>
  kcal
</div>

<div class="postManage">
  <%= link_to "編集", edit_tweet_path(@tweet.id), class: "postManage__edit" %>
  <%= link_to "削除", tweet_path(@tweet.id), method: :delete, class: "postManage__delete" %>
</div>
</div>
