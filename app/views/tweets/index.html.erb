<div class="contents">
  <div class="message">
    <div class="comment">
    <%# js非対応のsearch機能 %>
    <%= form_with(url: search_tweets_path, local: true, method: :get, class: "comment__search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "食材名かカロリー数値を入力してください", class: "comment__search-input" %>
    <%= button_tag type:"submit" , class: "comment__search-btn" do %>
    <%= fa_icon("search") %>
    <% end %>
    <% end %>
    <%# js対応のsearch機能 %>
    <%# <%= form_with(url: search_tweets_path, local: true, method: :get, class: "comment__search-form") do |form| %>
