    <%# <%= form.submit "検索", class: "comment__search-btn" %> 
    <%# <% end %> 

    </div>
  </div>
  <%# <div class="contents">  %>
  <% @tweets.each do |tweet| %>
  <%= link_to tweet_path(tweet.id) do %>
    <div class="content">
      <div class="content__left">
        <div class="content__left--images">
          <%= image_tag tweet.image.to_s,class: "content__left--images--image" %>
        </div>
      </div>
      <div class="content__right">
        <div class="content__right__top">
          <%=tweet.title %>
        </div>
        <div class="content__right__bottom">
          <div class="content__right__bottom--date">
            <%= tweet.data  %>
            kcal
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  <%= paginate(@tweets) %>
</div>

